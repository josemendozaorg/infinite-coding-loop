{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/metamodel.schema.json",
    "title": "Software Engineering Metamodel (Complete + Agents)",
    "description": "Strict execution graph mirroring the Orchestrator logic with Agents.",
    "type": "object",
    "required": [
        "entities",
        "relationships"
    ],
    "properties": {
        "entities": {
            "type": "array",
            "items": {
                "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json"
            }
        },
        "relationships": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Relationship"
            }
        }
    },
    "$defs": {
        "Rule": {
            "type": "object",
            "properties": {
                "source": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/EntityKind"
                },
                "target": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/EntityKind"
                },
                "relation": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/RelationshipType"
                }
            },
            "required": [
                "source",
                "target",
                "relation"
            ]
        },
        "Relationship": {
            "type": "object",
            "required": [
                "source_id",
                "target_id",
                "type"
            ],
            "properties": {
                "source_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "target_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "type": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/RelationshipType"
                }
            }
        },
        "AgentDefinition": {
            "type": "object",
            "properties": {
                "role": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/EntityKind"
                },
                "config_ref": {
                    "type": "string"
                }
            },
            "required": [
                "role",
                "config_ref"
            ]
        },
        "AgentDefinitions": {
            "description": "Agent configurations.",
            "agents": [
                {
                    "role": "ProductManager",
                    "config_ref": "spec/agents/product_manager.json"
                },
                {
                    "role": "Architect",
                    "config_ref": "spec/agents/architect.json"
                },
                {
                    "role": "Engineer",
                    "config_ref": "spec/agents/engineer.json"
                }
            ]
        },
        "GraphRules": {
            "description": "Valid execution flow.",
            "rules": [
                {
                    "source": "SoftwareApplication",
                    "target": "Feature",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Standard",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Environment",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Risk",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "ArchitecturePattern",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "ProjectStructure",
                    "relation": "contains"
                },
                {
                    "source": "ProductManager",
                    "target": "Requirement",
                    "relation": "creates"
                },
                {
                    "source": "Architect",
                    "target": "DesignSpec",
                    "relation": "creates"
                },
                {
                    "source": "Architect",
                    "target": "ProjectStructure",
                    "relation": "creates"
                },
                {
                    "source": "Engineer",
                    "target": "Plan",
                    "relation": "creates"
                },
                {
                    "source": "TechnologyStack",
                    "target": "Tool",
                    "relation": "uses"
                },
                {
                    "source": "Environment",
                    "target": "Tool",
                    "relation": "contains"
                },
                {
                    "source": "ArchitecturePattern",
                    "target": "DesignSpec",
                    "relation": "defines"
                },
                {
                    "source": "ArchitecturePattern",
                    "target": "ProjectStructure",
                    "relation": "defines"
                },
                {
                    "source": "Standard",
                    "target": "TechnologyStack",
                    "relation": "constrains"
                },
                {
                    "source": "TechnologyStack",
                    "target": "SourceFile",
                    "relation": "constrains"
                },
                {
                    "source": "TechnologyStack",
                    "target": "ProjectStructure",
                    "relation": "constrains"
                },
                {
                    "source": "ProjectStructure",
                    "target": "SourceFile",
                    "relation": "contains"
                },
                {
                    "source": "ChangeRequest",
                    "target": "Requirement",
                    "relation": "targets"
                },
                {
                    "source": "ChangeRequest",
                    "target": "DesignSpec",
                    "relation": "targets"
                },
                {
                    "source": "ChangeRequest",
                    "target": "Plan",
                    "relation": "triggers"
                },
                {
                    "source": "Environment",
                    "target": "Plan",
                    "relation": "constrains"
                },
                {
                    "source": "Standard",
                    "target": "DesignSpec",
                    "relation": "constrains"
                },
                {
                    "source": "Standard",
                    "target": "SourceFile",
                    "relation": "constrains"
                },
                {
                    "source": "Feature",
                    "target": "Requirement",
                    "relation": "contains"
                },
                {
                    "source": "Feature",
                    "target": "Persona",
                    "relation": "defines"
                },
                {
                    "source": "Persona",
                    "target": "Requirement",
                    "relation": "defines"
                },
                {
                    "source": "Requirement",
                    "target": "DesignSpec",
                    "relation": "specifies"
                },
                {
                    "source": "Requirement",
                    "target": "DomainEntity",
                    "relation": "defines"
                },
                {
                    "source": "Risk",
                    "target": "DesignSpec",
                    "relation": "mitigates"
                },
                {
                    "source": "DomainEntity",
                    "target": "DesignSpec",
                    "relation": "constrains"
                },
                {
                    "source": "DesignSpec",
                    "target": "Plan",
                    "relation": "specifies"
                },
                {
                    "source": "Plan",
                    "target": "SourceFile",
                    "relation": "implements"
                },
                {
                    "source": "TestCase",
                    "target": "SourceFile",
                    "relation": "constrains"
                },
                {
                    "source": "TestCase",
                    "target": "Requirement",
                    "relation": "verifies"
                },
                {
                    "source": "TestResult",
                    "target": "TestCase",
                    "relation": "verifies"
                },
                {
                    "source": "TestResult",
                    "target": "Observation",
                    "relation": "triggers"
                },
                {
                    "source": "Observation",
                    "target": "SoftwareApplication",
                    "relation": "analyzes"
                }
            ]
        }
    }
}