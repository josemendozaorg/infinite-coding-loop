{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://infinite-coding-loop.dass/schemas/metamodel.schema.json",
    "title": "Software Engineering Metamodel (Complete + Agents)",
    "description": "Strict execution graph mirroring the Orchestrator logic with Agents.",
    "type": "object",
    "required": [
        "entities",
        "relationships"
    ],
    "properties": {
        "entities": {
            "type": "array",
            "items": {
                "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json"
            }
        },
        "relationships": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Relationship"
            }
        }
    },
    "definitions": {
        "Relationship": {
            "type": "object",
            "required": [
                "source_id",
                "target_id",
                "type"
            ],
            "properties": {
                "source_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "target_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "contains",
                        "refines",
                        "implements",
                        "verifies",
                        "specifies",
                        "constrains",
                        "triggers",
                        "analyzes",
                        "defines",
                        "mitigates",
                        "targets",
                        "uses",
                        "creates"
                    ]
                }
            }
        },
        "PromptTemplate": {
            "type": "object",
            "required": [
                "relation",
                "template_ref"
            ],
            "properties": {
                "relation": {
                    "type": "string"
                },
                "source": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                },
                "template_ref": {
                    "type": "string"
                }
            }
        },
        "PromptTemplates": {
            "description": "Dynamic prompt configuration.",
            "templates": [
                {
                    "relation": "creates",
                    "target": "Requirement",
                    "template_ref": "spec/prompts/product_manager_requirements.md"
                },
                {
                    "relation": "creates",
                    "target": "DesignSpec",
                    "template_ref": "spec/prompts/architect_design_feature.md"
                },
                {
                    "relation": "creates",
                    "target": "ProjectStructure",
                    "template_ref": "spec/prompts/architect_project_structure.md"
                },
                {
                    "relation": "creates",
                    "target": "Plan",
                    "template_ref": "spec/prompts/engineer_implementation_plan.md"
                }
            ]
        },
        "GraphRules": {
            "description": "Valid execution flow.",
            "rules": [
                {
                    "source": "SoftwareApplication",
                    "target": "Feature",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Standard",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Environment",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Risk",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "ArchitecturePattern",
                    "relation": "contains"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "ProjectStructure",
                    "relation": "contains"
                },
                {
                    "source": "Agent",
                    "target": "Feature",
                    "relation": "creates"
                },
                {
                    "source": "Agent",
                    "target": "Requirement",
                    "relation": "creates"
                },
                {
                    "source": "Agent",
                    "target": "DesignSpec",
                    "relation": "creates"
                },
                {
                    "source": "Agent",
                    "target": "Plan",
                    "relation": "creates"
                },
                {
                    "source": "Agent",
                    "target": "SourceFile",
                    "relation": "creates"
                },
                {
                    "source": "TechnologyStack",
                    "target": "Tool",
                    "relation": "uses"
                },
                {
                    "source": "Environment",
                    "target": "Tool",
                    "relation": "contains"
                },
                {
                    "source": "ArchitecturePattern",
                    "target": "DesignSpec",
                    "relation": "defines"
                },
                {
                    "source": "ArchitecturePattern",
                    "target": "ProjectStructure",
                    "relation": "defines"
                },
                {
                    "source": "Standard",
                    "target": "TechnologyStack",
                    "relation": "constrains"
                },
                {
                    "source": "TechnologyStack",
                    "target": "SourceFile",
                    "relation": "constrains"
                },
                {
                    "source": "TechnologyStack",
                    "target": "ProjectStructure",
                    "relation": "constrains"
                },
                {
                    "source": "ProjectStructure",
                    "target": "SourceFile",
                    "relation": "contains"
                },
                {
                    "source": "ChangeRequest",
                    "target": "Requirement",
                    "relation": "targets"
                },
                {
                    "source": "ChangeRequest",
                    "target": "DesignSpec",
                    "relation": "targets"
                },
                {
                    "source": "ChangeRequest",
                    "target": "Plan",
                    "relation": "triggers"
                },
                {
                    "source": "Environment",
                    "target": "Plan",
                    "relation": "constrains"
                },
                {
                    "source": "Standard",
                    "target": "DesignSpec",
                    "relation": "constrains"
                },
                {
                    "source": "Standard",
                    "target": "SourceFile",
                    "relation": "constrains"
                },
                {
                    "source": "Feature",
                    "target": "Requirement",
                    "relation": "contains"
                },
                {
                    "source": "Feature",
                    "target": "Persona",
                    "relation": "defines"
                },
                {
                    "source": "Persona",
                    "target": "Requirement",
                    "relation": "defines"
                },
                {
                    "source": "Requirement",
                    "target": "DesignSpec",
                    "relation": "specifies"
                },
                {
                    "source": "Requirement",
                    "target": "DomainEntity",
                    "relation": "defines"
                },
                {
                    "source": "Risk",
                    "target": "DesignSpec",
                    "relation": "mitigates"
                },
                {
                    "source": "DomainEntity",
                    "target": "DesignSpec",
                    "relation": "constrains"
                },
                {
                    "source": "DesignSpec",
                    "target": "Plan",
                    "relation": "specifies"
                },
                {
                    "source": "Plan",
                    "target": "SourceFile",
                    "relation": "implements"
                },
                {
                    "source": "TestCase",
                    "target": "Requirement",
                    "relation": "verifies"
                },
                {
                    "source": "TestResult",
                    "target": "TestCase",
                    "relation": "verifies"
                },
                {
                    "source": "TestResult",
                    "target": "Observation",
                    "relation": "triggers"
                },
                {
                    "source": "Observation",
                    "target": "SoftwareApplication",
                    "relation": "analyzes"
                }
            ]
        }
    }
}