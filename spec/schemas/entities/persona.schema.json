{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/persona.schema.json",
    "title": "Persona",
    "description": "A representation of a user role or stakeholder (e.g., 'Admin', 'Guest').",
    "allOf": [
        {
            "$ref": "../base.schema.json#/$defs/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "kind": {
                    "$ref": "../taxonomy.schema.json#/$defs/Kind_Persona"
                },
                "role": {
                    "type": "string"
                },
                "responsibilities": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "kind",
                "role"
            ]
        }
    ]
}