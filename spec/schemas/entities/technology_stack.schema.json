{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/tech_stack.schema.json",
    "title": "TechStack",
    "description": "A specific technology item chosen for the project (e.g., 'React', 'Tokio').",
    "allOf": [
        {
            "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "kind": {
                    "$ref": "../taxonomy.schema.json#/$defs/Kind_TechnologyStack"
                },
                "type": {
                    "enum": [
                        "Language",
                        "Framework",
                        "Library",
                        "Database",
                        "Runtime"
                    ]
                },
                "version_constraint": {
                    "type": "string",
                    "description": "e.g., '^1.2.0'"
                },
                "website": {
                    "type": "string",
                    "format": "uri"
                },
                "reason": {
                    "type": "string",
                    "description": "Ideally referencing an ADR or decision."
                }
            },
            "required": [
                "kind",
                "type",
                "version_constraint"
            ]
        }
    ]
}