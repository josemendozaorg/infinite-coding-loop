{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/test_result.schema.json",
    "title": "TestResult",
    "description": "The outcome of a test case execution (Professional Grade).",
    "allOf": [
        {
            "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "kind": {
                    "$ref": "../taxonomy.schema.json#/$defs/Kind_TestResult"
                },
                "outcome": {
                    "enum": [
                        "Pass",
                        "Fail",
                        "Error",
                        "Skipped"
                    ]
                },
                "duration_ms": {
                    "type": "integer",
                    "minimum": 0
                },
                "executed_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "environment_ref": {
                    "type": "string",
                    "description": "ID of the Environment where this ran"
                },
                "logs": {
                    "type": "string"
                },
                "error_message": {
                    "type": "string"
                }
            },
            "required": [
                "kind",
                "outcome"
            ]
        }
    ]
}