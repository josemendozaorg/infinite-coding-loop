{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/plan.schema.json",
    "title": "Plan",
    "description": "A set of structured tasks to implement a specification.",
    "allOf": [
        {
            "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/definitions/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "kind": {
                    "const": "Plan"
                },
                "tasks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            },
                            "dependencies": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "estimated_duration": {
                                "type": "string",
                                "description": "e.g., '2h', '1d'"
                            }
                        },
                        "required": [
                            "id",
                            "description"
                        ]
                    }
                }
            },
            "required": [
                "kind",
                "tasks"
            ]
        }
    ]
}