{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/architecture_pattern.schema.json",
    "title": "ArchitecturePattern",
    "description": "A fundamental structural organization schema (e.g., MVC, Microservices).",
    "allOf": [
        {
            "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/definitions/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "kind": {
                    "const": "ArchitecturePattern"
                },
                "type": {
                    "enum": [
                        "Monolith",
                        "Microservices",
                        "Event-Driven",
                        "Layered",
                        "Hexagonal"
                    ]
                },
                "principles": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "structure_diagram": {
                    "type": "string",
                    "description": "Mermaid or text diagram of the pattern structure."
                }
            },
            "required": [
                "kind",
                "type"
            ]
        }
    ]
}