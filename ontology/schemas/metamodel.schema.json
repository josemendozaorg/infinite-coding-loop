                    "relation": "applies"
                },
                {
                    "source": "GoogleCodingStyle",
                    "target": "CodingStyle",
                    "relation": "isA"
                },
                {
                    "source": "Architect",
                    "target": "CodingStyle",
                    "relation": "defines"
                },
                {
                    "source": "Architect",
                    "target": "QualityMetric",
                    "relation": "defines"
                },
                {
                    "source": "Architect",
                    "target": "ArchitectureStyle",
                    "relation": "defines"
                },
                {
                    "source": "Microservices",
                    "target": "ArchitectureStyle",
                    "relation": "isA"
                },
                {
                    "source": "CyclomaticLowComplexity",
                    "target": "QualityMetric",
                    "relation": "isA"
                }
            ]
        }
    }
}