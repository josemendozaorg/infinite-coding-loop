{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/metamodel.schema.json",
    "title": "Software Engineering Metamodel (Complete + Agents)",
    "description": "Strict execution graph mirroring the Orchestrator logic with Agents.",
    "type": "object",
    "required": [
        "entities",
        "relationships"
    ],
    "properties": {
        "entities": {
            "type": "array",
            "items": {
                "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json"
            }
        },
        "relationships": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Relationship"
            }
        }
    },
    "$defs": {
        "Rule": {
            "allOf": [
                {
                    "$ref": "base.schema.json#/$defs/Rule"
                },
                {
                    "properties": {
                        "source": {
                            "$ref": "taxonomy.schema.json#/$defs/EntityKind"
                        },
                        "target": {
                            "$ref": "taxonomy.schema.json#/$defs/EntityKind"
                        },
                        "relation": {
                            "$ref": "taxonomy.schema.json#/$defs/RelationshipType"
                        }
                    }
                }
            ]
        },
        "Relationship": {
            "allOf": [
                {
                    "$ref": "base.schema.json#/$defs/Relationship"
                },
                {
                    "properties": {
                        "type": {
                            "$ref": "taxonomy.schema.json#/$defs/RelationshipType"
                        }
                    }
                }
            ]
        },
        "AgentDefinition": {
            "type": "object",
            "properties": {
                "role": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/EntityKind"
                },
                "config_ref": {
                    "type": "string"
                }
            },
            "required": [
                "role",
                "config_ref"
            ]
        },
        "AgentDefinitions": {
            "description": "Agent configurations.",
            "agents": [
                {
                    "role": "ProductManager",
                    "config_ref": "spec/agents/product_manager.json"
                },
                {
                    "role": "Architect",
                    "config_ref": "spec/agents/architect.json"
                },
                {
                    "role": "Engineer",
                    "config_ref": "spec/agents/engineer.json"
                }
            ]
        },
        "GraphRules": {
            "description": "Valid execution flow.",
            "rules": [
                {
                    "source": "SoftwareApplication",
                    "target": "ProductManager",
                    "relation": "assigned"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Architect",
                    "relation": "assigned"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Developer",
                    "relation": "assigned"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "Tester",
                    "relation": "assigned"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "DevOps",
                    "relation": "assigned"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "ProjectManager",
                    "relation": "assigned"
                },
                {
                    "source": "SoftwareApplication",
                    "target": "BusinessAnalyst",
                    "relation": "assigned"
                },
                {
                    "source": "TDD",
                    "target": "Methodology",
                    "relation": "isA"
                },
                {
                    "source": "BDD",
                    "target": "Methodology",
                    "relation": "isA"
                },
                {
                    "source": "DDD",
                    "target": "Methodology",
                    "relation": "isA"
                },
                {
                    "source": "Feature",
                    "target": "UserStory",
                    "relation": "requires"
                },
                {
                    "source": "UserStory",
                    "target": "AcceptanceCriteria",
                    "relation": "requires"
                },
                {
                    "source": "UserStory",
                    "target": "ImplementationPlan",
                    "relation": "requires"
                },
                {
                    "source": "TestCase",
                    "target": "UnitTest",
                    "relation": "requires"
                },
                {
                    "source": "UnitTest",
                    "target": "SuccessfulTestResult",
                    "relation": "requires"
                },
                {
                    "source": "BusinessAnalyst",
                    "target": "Feature",
                    "relation": "verifies"
                },
                {
                    "source": "Developer",
                    "target": "Code",
                    "relation": "creates"
                },
                {
                    "source": "Developer",
                    "target": "Code",
                    "relation": "verifies"
                },
                {
                    "source": "Developer",
                    "target": "UserStory",
                    "relation": "implements"
                },
                {
                    "source": "Developer",
                    "target": "UnitTest",
                    "relation": "implements"
                },
                {
                    "source": "Developer",
                    "target": "UnitTest",
                    "relation": "verifies"
                },
                {
                    "source": "Developer",
                    "target": "UnitTest",
                    "relation": "improves"
                },
                {
                    "source": "Developer",
                    "target": "Code",
                    "relation": "improves"
                },
                {
                    "source": "Code",
                    "target": "CyclomaticLowComplexity",
                    "relation": "requires"
                },
                {
                    "source": "Code",
                    "target": "CodingStyle",
                    "relation": "requires"
                },
                {
                    "source": "Code",
                    "target": "CodingPractice",
                    "relation": "requires"
                },
                {
                    "source": "KISS",
                    "target": "CodingPractice",
                    "relation": "isA"
                },
                {
                    "source": "DRY",
                    "target": "CodingPractice",
                    "relation": "isA"
                },
                {
                    "source": "Developer",
                    "target": "CodingStyle",
                    "relation": "applies"
                },
                {
                    "source": "Developer",
