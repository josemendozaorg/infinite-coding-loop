{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/artifact.schema.json",
    "title": "Artifact",
    "description": "A tangible by-product produced during the software development process.",
    "allOf": [
        {
            "$ref": "../base.schema.json#/$defs/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "kind": {
                    "$ref": "../taxonomy.schema.json#/$defs/EntityKind"
                },
                "artifact_type": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/ArtifactType"
                },
                "uri": {
                    "type": "string",
                    "format": "uri",
                    "description": "Unique Identifier/Location of the artifact."
                },
                "version": {
                    "type": "string",
                    "description": "Version identifier."
                }
            },
            "required": [
                "kind",
                "artifact_type",
                "uri"
            ]
        }
    ]
}