{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/agent.schema.json",
    "title": "Agent",
    "description": "An AI worker responsible for creating specific artifacts (The 'Who').",
    "allOf": [
        {
            "$ref": "../base.schema.json#/$defs/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "kind": {
                    "$ref": "../taxonomy.schema.json#/$defs/EntityKind"
                },
                "role": {
                    "$ref": "https://infinite-coding-loop.dass/schemas/taxonomy.schema.json#/$defs/AgentRole"
                },
                "system_prompt": {
                    "type": "string",
                    "description": "The personality and constraints for this agent."
                },
                "tools": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of allowed tools (e.g., 'search_web', 'write_file')."
                }
            },
            "required": [
                "kind",
                "role"
            ]
        }
    ]
}