{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ICL Configuration Schema",
    "description": "Schema for the Infinite Coding Loop configuration file (icl.json)",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Optional link to the JSON schema"
        },
        "version": {
            "type": "string",
            "description": "The version of the configuration schema",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "app_id": {
            "type": "string",
            "description": "Unique identifier for the application"
        },
        "app_name": {
            "type": "string",
            "description": "The name of the application"
        },
        "docs_folder": {
            "type": "string",
            "description": "The folder where documentation/specifications are stored (relative to project root)",
            "default": "spec"
        }
    },
    "required": [
        "version",
        "app_id",
        "app_name",
        "docs_folder"
    ],
    "additionalProperties": false
}