{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://infinite-coding-loop.dass/schemas/entities/implementation_plan.schema.json",
    "title": "ImplementationPlan",
    "description": "A detailed plan for implementing a feature or change.",
    "allOf": [
        {
            "$ref": "../base.schema.json#/$defs/EntityMetadata"
        },
        {
            "type": "object",
            "properties": {
                "steps": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Step-by-step instructions"
                },
                "files_to_modify": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "verification_steps": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "steps"
            ]
        }
    ]
}