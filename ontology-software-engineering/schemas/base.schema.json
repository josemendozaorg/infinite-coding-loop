{
    "$id": "https://infinite-coding-loop.dass/schemas/base.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Software Engineering Primitives",
    "description": "Standard primitives for the loop, extending meta-ontology.",
    "type": "object",
    "$defs": {
        "EntityMetadata": {
            "allOf": [
                {
                    "$ref": "https://infinite-coding-loop.dass/schemas/meta/base.schema.json#/$defs/MetaEntity"
                },
                {
                    "type": "object",
                    "properties": {
                        "synonyms": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "tags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "metadata": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            ]
        },
        "Relationship": {
            "$ref": "https://infinite-coding-loop.dass/schemas/meta/base.schema.json#/$defs/MetaRelationship"
        },
        "Rule": {
            "type": "object",
            "required": [
                "source",
                "target",
                "relation"
            ],
            "properties": {
                "source": {
                    "type": "string",
                    "description": "Source Entity Kind."
                },
                "target": {
                    "type": "string",
                    "description": "Target Entity Kind."
                },
                "relation": {
                    "type": "string",
                    "description": "Relationship Type."
                }
            }
        },
        "AgentConfig": {
            "$ref": "https://infinite-coding-loop.dass/schemas/meta/agent.schema.json"
        }
    }
}